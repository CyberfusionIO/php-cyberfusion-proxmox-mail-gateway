{
    "name": "cyberfusion/proxmox-mail-gateway",
    "description": "Library for Proxmox Mail Gateway.",
    "type": "library",
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "lib-curl": "*",
        "guzzlehttp/guzzle": "^7.0",
        "illuminate/support": "^9.0|^10.0",
        "laravel/pint": "^1.7"
    },
    "require-dev": {
        "mockery/mockery": "^1.4",
        "phpstan/phpstan": "^1.2",
        "phpunit/phpunit": "^10.0"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Cyberfusion\\ProxmoxMGW\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cyberfusion\\ProxmoxMGW\\Tests\\": "tests/"
        }
    },
    "license": "proprietary",
    "authors": [
        {
            "name": "Dick van der Heiden",
            "email": "engineering@cyberfusion.nl"
        }
    ],
    "minimum-stability": "stable"
}
